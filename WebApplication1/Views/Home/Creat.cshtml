@model Student
<form asp-controller="Home" asp-action="Creat" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label for="a" class="col-sm-2 col-form-label">ID</label>@*asp-for="Id"*@
    <div class="col-sm-10">
        <input id="a" name="a" class="form-control" placeholder="请输入ID" readonly />@*asp-for="Id"*@
    </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="请输入Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Number" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Number" asp-items="Html.GetEnumSelectList<NumberEnum>()" class="custom-select mr-sm-2">
                <option value="">请选择</option>
            </select>
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">注册</button>
        </div>
    </div>
</form>