@model StudentCreatViewModel
    <form enctype="multipart/form-data" asp-controller="Home" asp-action="Creat" method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label for="a" class="col-sm-2 col-form-label">ID</label>@*asp-for="Id"*@
            <div class="col-sm-10">
                <input id="a" name="a" class="form-control" placeholder="请输入ID" readonly />@*asp-for="Id"*@
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="请输入Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Number" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="Number" asp-items="Html.GetEnumSelectList<NumberEnum>()" class="custom-select mr-sm-2">
                    <option value="">请选择</option>
                </select>
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Photos" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photos" class="form-control custom-file-input" multiple />
                    <label class="custom-file-label">请选择图片</label>
                    <span asp-validation-for="Photos" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">注册</button>
            </div>
        </div>
        @section Scripts{
            <script type="text/javascript">
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        //var filename = $(this).val().split("\\").pop();
                        ////console.log($(this).val());
                        //$(this).next('.custom-file-label').html(filename);
                        console.log($(this));
                        var filelable = $(this).next(".custom-file-lable");
                        var files = $(this)[0].files;
                        if (files.length > 1) {
                            filelable.html("你已经选择" + files.length + "个文件");
                        } else {
                            filelable.html(files[0].name);
                        }
                    });
                });
            </script>
        }
    </form>