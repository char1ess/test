@model Student
<form asp-controller="Home" asp-action="Creat" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" class="form-control" placeholder="请输入ID" readonly/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="请输入Name" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Number" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-items="Html.GetEnumSelectList<NumberEnum>()" class="custom-select mr-sm-2"></select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">注册</button>
        </div>
    </div>
</form>