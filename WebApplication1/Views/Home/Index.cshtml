<div class="card-deck">
    @foreach (var item in Model)
    {
        var photoPath = "~/images/" + (item.PhotoPath ?? "3.jpg");
        <div class="card m-3">
            <div class="card-header">
                <h3>@item.Name</h3>
            </div>
            <img src="@photoPath" class="card-img-top imagesThumbnail" asp-append-version="true"/>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@item.Id" class="btn btn-primary">查看</a>
                <a href="#" class="btn btn-primary">编辑</a>
                <a href="#" class="btn btn-danger">删除</a>
            </div>
        </div>
