@model List<UserRoleViewModel>
@{
    ViewBag.Title = "在角色中添加删除用户";
    var roleId = ViewBag.roleId;
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>在角色中添加删除用户</h2>
        </div>
        <div class="card-body">

            @for (int i = 0; i < Model.Count - 1; i++)
            {
            <div class="form-check m-1">
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].UserName</label>
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].UserName" />
            </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="更新" class="btn btn-primary" style="width:auto"/>
            <a asp-action="EditRole" asp-route-roleId="@roleId" class="btn btn-primary">取消</a>
        </div>
    </div>
</form>
